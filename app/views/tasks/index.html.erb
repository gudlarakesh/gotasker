<h1 id="page-title">My Tasks</h1>
<div id="tasks">
  <p>You do not have any tasks yet</p>
</div>
<div id="task-flash"></div>
<%= simple_form_for @new_task, remote: true do |f| %>
  <%= f.input :title, label: false, placeholder: "Enter title for new task. Eg: Learn Java" %>
  <%= f.submit "Add Task" %>
<% end %>